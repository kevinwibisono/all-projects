<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="my.istts.finalproject.viewmodels.itemviewmodels.CartItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCartSeller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:cardElevation="5dp"
            android:visibility="@{viewmodel.sellerShown ? View.VISIBLE : View.GONE, default=gone}">

            <LinearLayout
                android:id="@+id/cartSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp">

                <CheckBox
                    android:id="@+id/chkBoxCartSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:visibility='@{viewmodel.sellerPic == "" ? View.GONE : View.VISIBLE, default=gone}'
                    android:checked="@{viewmodel.isSellerChecked() ? true : false, default=false}"
                    android:minWidth="24dp"
                    android:minHeight="24dp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivCartSeller"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background='@{viewmodel.sellerPic == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                    android:scaleType="fitXY"
                    app:shapeAppearanceOverlay="@style/circleImageView" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:background='@{viewmodel.sellerName == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                    android:text="@{viewmodel.sellerName}"
                    android:textSize="12sp" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{viewmodel.isDeleted() ? View.GONE : View.VISIBLE, default=visible}">

            <LinearLayout
                android:id="@+id/partCartValid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility='@{viewmodel.reason.equals("") ? View.VISIBLE : View.GONE, default=gone}'>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCartProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardElevation="2dp"
                        android:visibility="@{viewmodel.type == 0 ? View.VISIBLE : View.GONE, default=gone}">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/chkBoxCartProduct"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="5dp"
                                        android:visibility="@{viewmodel.price == 0 ? View.GONE : View.VISIBLE, default=gone}"
                                        android:checked="@{viewmodel.isChecked() ? true : false, default=false}"
                                        android:minWidth="24dp"
                                        android:minHeight="24dp" />

                                    <ImageView
                                        android:id="@+id/ivCartProduct"
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:background='@{viewmodel.itemPic == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                        android:scaleType="fitXY" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <LinearLayout
                                        android:id="@+id/partCartProduct"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background='@{viewmodel.itemName == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                            android:text="@{viewmodel.itemName}"
                                            android:textColor="#000000"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text='@{"Variasi: "+viewmodel.itemVariasi}'
                                            android:visibility='@{viewmodel.itemVariasi == "" ? View.GONE : View.VISIBLE, default=gone}'
                                            android:textSize="10sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:background='@{viewmodel.itemPrice == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                            android:text='@{viewmodel.itemPrice == "" ? "" : "Rp "+viewmodel.itemPrice, default=""}' />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:gravity="right|center_vertical"
                                        android:orientation="horizontal">

                                        <com.google.android.material.button.MaterialButton
                                            android:id="@+id/btnDeleteCartProduct"
                                            style="?attr/borderlessButtonStyle"
                                            android:layout_width="50dp"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="#FFFFFF"
                                            android:drawableLeft="@drawable/ic_baseline_delete_20"
                                            android:minWidth="0dp"
                                            android:minHeight="0dp"
                                            android:text="" />

                                        <com.google.android.material.button.MaterialButton
                                            style="?attr/borderlessButtonStyle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint='@{viewmodel.isReducable() ? @android:color/holo_red_light : @color/lightGrey, default=@color/lightGrey}'
                                            android:drawableLeft="@drawable/ic_baseline_remove_20"
                                            android:minWidth="0dp"
                                            android:minHeight="0dp"
                                            android:onClick="@{() -> viewmodel.reduceTotal()}"
                                            android:text="" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginEnd="10dp"
                                            android:text='@{viewmodel.itemQty > 0 ? String.valueOf(viewmodel.itemQty) : "", default=""}' />

                                        <com.google.android.material.button.MaterialButton
                                            style="?attr/borderlessButtonStyle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint='@{viewmodel.isAddable() ? @android:color/holo_green_light : @color/lightGrey, default=@color/lightGrey}'
                                            android:drawableLeft="@drawable/ic_baseline_add_20"
                                            android:minWidth="0dp"
                                            android:minHeight="0dp"
                                            android:onClick="@{() -> viewmodel.addTotal()}"
                                            android:text="" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCartGrooming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardElevation="2dp"
                        android:visibility="@{viewmodel.type == 1 ? View.VISIBLE : View.GONE, default=gone}">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <CheckBox
                                        android:id="@+id/chkBoxCartGrooming"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginEnd="5dp"
                                        android:visibility="@{viewmodel.price == 0 ? View.GONE : View.VISIBLE, default=gone}"
                                        android:checked="@{viewmodel.isChecked() ? true : false, default=false}"
                                        android:minWidth="24dp"
                                        android:minHeight="24dp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@{viewmodel.itemName}"
                                            android:textSize="16sp"
                                            android:textColor="#000000"
                                            android:layout_marginBottom="10dp"
                                            android:textStyle="bold"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text='@{"Rp "+viewmodel.itemPrice}'
                                            android:textStyle="bold"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:gravity="right|center_vertical"
                                    android:orientation="horizontal">

                                    <com.google.android.material.button.MaterialButton
                                        android:id="@+id/btnDeleteCartGrooming"
                                        style="?attr/borderlessButtonStyle"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#FFFFFF"
                                        android:drawableLeft="@drawable/ic_baseline_delete_20"
                                        android:minWidth="0dp"
                                        android:minHeight="0dp"
                                        android:text="" />

                                    <com.google.android.material.button.MaterialButton
                                        style="?attr/borderlessButtonStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint='@{viewmodel.isReducable() ? @android:color/holo_red_light : @color/lightGrey, default=@color/lightGrey}'
                                        android:drawableLeft="@drawable/ic_baseline_remove_20"
                                        android:minWidth="0dp"
                                        android:minHeight="0dp"
                                        android:onClick="@{() -> viewmodel.reduceTotal()}"
                                        android:text="" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:text='@{viewmodel.itemQty > 0 ? String.valueOf(viewmodel.itemQty) : "", default=""}' />

                                    <com.google.android.material.button.MaterialButton
                                        style="?attr/borderlessButtonStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint='@{viewmodel.isAddable() ? @android:color/holo_green_light : @color/lightGrey, default=@color/lightGrey}'
                                        android:drawableLeft="@drawable/ic_baseline_add_20"
                                        android:minWidth="0dp"
                                        android:minHeight="0dp"
                                        android:onClick="@{() -> viewmodel.addTotal()}"
                                        android:text="" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCartHotel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardElevation="5dp"
                        android:visibility="@{viewmodel.type == 2 ? View.VISIBLE : View.GONE, default=gone}">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <CheckBox
                                    android:id="@+id/chkBoxCartHotel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="5dp"
                                    android:visibility="@{viewmodel.price == 0 ? View.GONE : View.VISIBLE, default=gone}"
                                    android:checked="@{viewmodel.isChecked() ? true : false, default=false}"
                                    android:minWidth="24dp"
                                    android:minHeight="24dp" />

                                <ImageView
                                    android:id="@+id/ivCartHotel"
                                    android:layout_width="90dp"
                                    android:layout_height="70dp"
                                    android:background='@{viewmodel.itemPic == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                    android:scaleType="fitXY" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <LinearLayout
                                        android:id="@+id/partCartHotel"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background='@{viewmodel.itemName == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                            android:text="@{viewmodel.itemName}"
                                            android:textColor="#000000"
                                            android:textSize="14sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background='@{viewmodel.itemFacs == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                            android:text="@{viewmodel.itemFacs}"
                                            android:textSize="12sp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal"
                                            android:background='@{viewmodel.itemPrice == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="5dp"
                                                android:text='@{viewmodel.itemPrice == "" ? "" : "Rp "+viewmodel.itemPrice, default=""}' />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text='@{viewmodel.itemPrice == "" ? "" : " / malam", default=""}'
                                                android:textSize="12sp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginTop="10dp"
                                        android:text="Jumlah Kamar: "
                                        android:textStyle="bold" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="right|center_vertical"
                                        android:layout_weight="1"
                                        android:orientation="horizontal">

                                        <com.google.android.material.button.MaterialButton
                                            android:id="@+id/btnDeleteCartHotel"
                                            style="?attr/borderlessButtonStyle"
                                            android:layout_width="50dp"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint="#FFFFFF"
                                            android:drawableLeft="@drawable/ic_baseline_delete_20"
                                            android:insetTop="0dp"
                                            android:insetBottom="0dp"
                                            android:minWidth="0dp"
                                            android:minHeight="0dp"
                                            android:text="" />

                                        <com.google.android.material.button.MaterialButton
                                            style="?attr/borderlessButtonStyle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint='@{viewmodel.isReducable() ? @android:color/holo_red_light : @color/lightGrey, default=@color/lightGrey}'
                                            android:drawableLeft="@drawable/ic_baseline_remove_20"
                                            android:insetTop="0dp"
                                            android:insetBottom="0dp"
                                            android:minWidth="0dp"
                                            android:minHeight="0dp"
                                            android:onClick="@{() -> viewmodel.reduceTotal()}"
                                            android:text="" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginEnd="10dp"
                                            android:text="@{String.valueOf(viewmodel.itemQty)}" />

                                        <com.google.android.material.button.MaterialButton
                                            style="?attr/borderlessButtonStyle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:backgroundTint='@{viewmodel.isAddable() ? @android:color/holo_green_light : @color/lightGrey, default=@color/lightGrey}'
                                            android:drawableLeft="@drawable/ic_baseline_add_20"
                                            android:insetTop="0dp"
                                            android:insetBottom="0dp"
                                            android:minWidth="0dp"
                                            android:minHeight="0dp"
                                            android:onClick="@{() -> viewmodel.addTotal()}"
                                            android:text="" />

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/partCartInvalid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility='@{viewmodel.reason.equals("") ? View.GONE : View.VISIBLE, default=gone}'>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardElevation="2dp"
                    android:visibility="@{viewmodel.type == 0 ? View.VISIBLE : View.GONE, default=gone}">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:alpha="0.15"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/ivCartInvProduct"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginEnd="10dp"
                                android:background='@{viewmodel.itemPic == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                android:scaleType="fitXY" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background='@{viewmodel.itemName == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                        android:text="@{viewmodel.itemName}"
                                        android:textColor="#000000"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{"Variasi: "+viewmodel.itemVariasi}'
                                        android:visibility='@{viewmodel.itemVariasi == "" ? View.GONE : View.VISIBLE, default=gone}'
                                        android:textSize="10sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginBottom="10dp"
                                            android:background='@{viewmodel.price == 0 ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                            android:text='@{viewmodel.price == 0 ? "" : "Rp "+viewmodel.itemPrice, default=""}' />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="right"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginEnd="10dp"
                                            android:textStyle="bold"
                                            android:text='@{viewmodel.itemQty > 0 ? " x "+String.valueOf(viewmodel.itemQty) : "", default=""}' />
                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnDeleteCartInvProduct"
                                style="?attr/borderlessButtonStyle"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#FFFFFF"
                                android:layout_gravity="right"
                                android:drawableLeft="@drawable/ic_baseline_delete_20"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@{viewmodel.reason}"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardElevation="5dp"
                    android:visibility="@{viewmodel.type == 2 ? View.VISIBLE : View.GONE, default=gone}">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:alpha="0.15"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/ivCartInvHotel"
                                android:layout_width="90dp"
                                android:layout_height="70dp"
                                android:layout_marginEnd="10dp"
                                android:background='@{viewmodel.itemPic == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                android:scaleType="fitXY" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background='@{viewmodel.itemName == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                    android:text="@{viewmodel.itemName}"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background='@{viewmodel.itemFacs == "" ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'
                                    android:text="@{viewmodel.itemFacs}"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:background='@{viewmodel.price == 0 ? @color/lightGrey : @android:color/white, default=@color/lightGrey}'>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="5dp"
                                        android:text='@{viewmodel.price == 0 ? "" : "Rp "+viewmodel.itemPrice, default=""}' />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text='@{viewmodel.price == 0 ? "" : " / malam", default=""}'
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginTop="10dp"
                                        android:text="Jumlah Kamar: "
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:text="@{String.valueOf(viewmodel.itemQty)}" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnDeleteCartInvHotel"
                                style="?attr/borderlessButtonStyle"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#FFFFFF"
                                android:layout_gravity="right"
                                android:drawableLeft="@drawable/ic_baseline_delete_20"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@{viewmodel.reason}"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</layout>

